# Home
set home-page=google.com

set fontsize=12px
set history-max-items=99999
set input-autohide=true
set spacial-navigation=true
set spell-checking=true
set statusbar=false
set webinspector=true

# map ;
nnoremap ; :
nnoremap : ;

nnoremap q :q<CR>

# Downloads
set download-path=~/Downloads

# UI
set stylesheet=on
set smooth-scrolling=on

# Status bar
set status-color-bg=#002b36
set status-color-fg=#657b83
set status-font=Cousine-11
set status-ssl-color-bg=#002b36
set status-ssl-color-fg=#657b83
set status-ssl-font=Cousine-11
set status-sslinvalid-color-bg=#002b36
set status-sslinvalid-color-fg=#657b83
set status-sslinvalid-font=Cousine-11

# Input bar
set input-bg-normal=#002b36
set input-fg-normal=#657b83
set input-font-normal=Cousine-11
set input-bg-error=#002b36
set input-fg-error=#5f676a
set input-font-error=Cousine-11

# Completion
set completion-bg-normal=#002b36
set completion-fg-normal=#657b83
set completion-bg-active=#002b36
set completion-fg-active=#5f676a
set completion-font=Cousine-11

# Webkit
set accelerated-compositing=on
set defaultencoding=utf-8
set html5-database=on
set html5-local-storage=on
set images=on
set webgl=on

# SSL
set strict-ssl=false

# JS
set javascript-can-access-clipboard=off
set javascript-can-open-windows-automatically=off

# Editing
set editor-command=gvim -f %s

# Try to speed things up
set proxy=off

# Shortcut
shortcut-default gg
shortcut-add ab=https://bbs.archlinux.org/search.php?action=search&author=&forums=&search_in=0&sort_by=0&sort_dir=DESC&show_as=topics&keywords=$0
shortcut-add au=https://aur.archlinux.org/packages/?O=0&C=0&SeB=nd&outdated=&SB=n&SO=a&PP=50&do_Search=Go&K=$0
shortcut-add aw=https://wiki.archlinux.org/index.php?title=Special:Search&search=$0
shortcut-add di=http://dictionary.reference.com/browse/$0
shortcut-add gi=https://github.com/search?q=$0
shortcut-add ro=http://www.rottentomatoes.com/search/?search=$0
shortcut-add wi=http://en.wikipedia.org/w/index.php?title=Special:Search&search=$0
shortcut-add wo=http://www.wolframalpha.com/input/?i=$0
shortcut-add yo=http://www.youtube.com/results?search_query=$0
shortcut-add du=https://duckduckgo.com/?q=$0&ia=images
shortcut-add gg=http://google.com/search?q=$0
