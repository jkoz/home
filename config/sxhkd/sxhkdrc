# Terminal
mod4 + Return
    st
# Terminal Dropdown
mod4 + i
    xdotool search --maxdept 1 --onlyvisible --class "terminaldropdown" windowunmap || xdotool search --maxdept 1 --class "terminaldropdown" windowmap windowraise windowmove 0 20 windowsize 100% 97% || st -c terminaldropdown -e tmux a &
# Terminal
#mod4 + t
    #xdotool search --maxdept 1 --onlyvisible --class "st-256color" windowunmap || xdotool search --maxdept 1 --class "st-256color" windowmap windowraise windowmove 0 20 || st &

# Dictionary
mod4 + d
    xdotool search --maxdept 1 --onlyvisible --name "LDOCE5 viewer" windowunmap || xdotool search --maxdept 1 --name "LDOCE5 viewer" windowmap windowraise windowmove 0 20 windowsize 100% 97% || ldoce5viewer &
# File Manager
mod4 + f
    st -c Fzf -e sh -c "xdotool search 'Fzf' windowsize 100% 50% windowmove 0 20; dm fm"
# Switch window
mod4 + w
    st -c Fzf -e sh -c "xdotool search 'Fzf' windowsize 100% 50% windowmove 0 20; dm sw"
# Increase Backlight
mod4 + Up
    xbacklight -inc 20
# Decrease Backlight
mod4 + Down
    xbacklight -dec 20
# Increase volume
mod4 + Right
    amixer -c 0 set Master 1+
# Decrease volume
mod4 + Left
    amixer -c 0 set Master 1-
# Zathura pdf
mod4 + p
    xdotool search --maxdept 1 --onlyvisible --classname "tabbed-zathura" windowunmap || xdotool search --maxdept 1 --classname "tabbed-zathura" windowmap windowraise windowmove 0 20 windowsize 100% 97% || zathura-tabbed &
# Kill process
mod4 + u
    st -c Fzf -e sh -c "xdotool search 'Fzf' windowsize 100% 50% windowmove 0 20; dm ps"
# Lock screen
mod4 + bracketright
    slock
# Reboot
mod4 + shift + r
    systemctl reboot
# Power off
mod4 + shift + s
    systemctl poweroff
# Browser
mod4 + b
    xdotool search --maxdept 1 --onlyvisible --classname "VimbT" windowunmap || xdotool search --maxdept 1 --classname "VimbT" windowmap windowraise windowmove 0 20 windowsize 100% 97% || vimb-tabbed &
mod4 + h
    st -c Fzf -e sh -c "dm bh | xargs -r vimb-tabbed"
mod4 + m
    st -c Fzf -e sh -c "dm bm | xargs -r vimb-tabbed"
mod4 + shift + b
    xdotool search --maxdept 1 --onlyvisible --name "\- Google Chrome" windowunmap || xdotool search --maxdept 1 "\- Google Chrome" windowmap windowraise windowmove 0 20 windowsize 100% 97% || google-chrome-stable &
# Screen print
Print
    scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
# Screen print (window)
mod4 + Print
    scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'
# Run applications (desktop files)
mod4 + space
    st -c Fzf -e sh -c "xdotool search 'Fzf' windowsize 100% 50% windowmove 0 20; dm rn"
# Toogle Mpd
mod4 + n
    mpc -h ~/.mpd/socket toggle
# Mpc client
mod4 + e
    clerk
# Edit systemd files
mod4 + z
    st -c Fzf -e sh -c "xdotool search 'Fzf' windowsize 100% 50% windowmove 0 20; dm open /etc/systemd/ /usr/lib/systemd ~/.config/systemd"
# Google launcher
mod4 + g
    chromium --show-app-list
# Edit clouds file
mod4 + c
    st -c Fzf -e sh -c "xdotool search 'Fzf' windowsize 100% 50% windowmove 0 20; dm open $CLOUD_HOME"
# Notes TODO: move to dm
mod4 + m
    cd $CLOUD_HOME/Documents && xdg-open "$(ag --silent -l -g "Note.md$" Notes CS | dm)" &
# Reload sxhkd
mod4 + r
    pkill -USR1 -x sxhkd
# Menu
mod4 + bracketleft
    st -c Fzf -e sh -c "xdotool search 'Fzf' windowsize 100% 50% windowmove 0 20; dm mn"

## Window manager stuff

# Close window
mod4 + shift + c
    xdotool selectwindow windowkill
# Toogle max
mod4 + shift + m
    xdotool selectwindow windowmove 0 20 windowsize 100% 97%

# Quit wm
#mod4 + shift + q
    #pkill -USR1 -x wm

mod4 + shift + q
    bspc quit

# alternate tiled and monocle
mod4 + j
    bspc desktop -l next

### Focus

# focus the next/previous node
mod4 + {_,shift + }y
    bspc node -f {next,prev}

# focus the node in the given direction
mod4 + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# preselect the direction
mod4 + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
mod4 + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
mod4 + ctrl + space
    bspc node -p cancel

