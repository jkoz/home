# Terminal
mod4 + Return
    st
# Terminal Dropdown
mod4 + i
    xdotool search --maxdept 1 --onlyvisible --classname "terminaldropdown" windowunmap || xdotool search --maxdept 1 --classname "terminaldropdown" windowmap windowraise windowmove 0 20 windowsize 100% 97% || st -c terminaldropdown -e tmux a &
# Terminal
mod4 + t
    xdotool search --maxdept 1 --onlyvisible --classname "st-256color" windowunmap || xdotool search --maxdept 1 --classname "st-256color" windowmap windowraise windowmove 0 20 || st &

# Dictionary
mod4 + d
    xdotool search --maxdept 1 --onlyvisible --name "LDOCE5 viewer" windowunmap || xdotool search --maxdept 1 --name "LDOCE5 viewer" windowmap windowraise windowmove 0 20 windowsize 100% 97% || ldoce5viewer &
# File Manager
mod4 + f
    st -c Fzf -e sh -c "xdotool search "Fzf" windowsize 100% 50%; dm fm"
# Switch window
mod4 + w
    st -c Fzf -e sh -c "xdotool search "Fzf" windowsize 100% 50%; dm sw"
# Increase Backlight
mod4 + Up
    xbacklight -inc 20
# Decrease Backlight
mod4 + Down
    xbacklight -dec 20
# Increase volume
mod4 + Right
    amixer -c 0 set Master 1+
# Decrease volume
mod4 + Left
    amixer -c 0 set Master 1-
# Zathura pdf
mod4 + p
    xdotool search --maxdept 1 --onlyvisible --classname "tabbed-zathura" windowunmap || xdotool search --maxdept 1 --classname "tabbed-zathura" windowmap windowraise windowmove 0 20 windowsize 100% 97% || zathura-tabbed &
# Kill process
mod4 + u
    st -c Fzf -e sh -c "xdotool search "Fzf" windowsize 100% 50%; dm ps"
# Lock screen
mod4 + bracketright
    slock
# Reboot
mod4 + shift + r
    systemctl reboot
# Power off
mod4 + s
    systemctl poweroff
# Browser
mod4 + b
    xdotool search --maxdept 1 --onlyvisible --name "\- Google Chrome" windowunmap || xdotool search --maxdept 1 "\- Google Chrome" windowmap windowraise windowmove 0 20 windowsize 100% 97% || google-chrome-stable &
# Screen print
Print
    scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
# Screen print (window)
mod4 + Print
    scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'
# Run applications (desktop files)
mod4 + space
    st -c Fzf -e sh -c "xdotool search "Fzf" windowsize 100% 50%; dm rn"
# Toogle Mpd
mod4 + n
    mpc -h ~/.mpd/socket toggle
# Mpc client
mod4 + e
    clerk
# Edit systemd files
mod4 + z
    st -c Fzf -e sh -c "xdotool search "Fzf" windowsize 100% 50%; dm open /etc/systemd/ /usr/lib/systemd ~/.config/systemd"
# Google launcher
mod4 + g
    chromium --show-app-list
# Edit clouds file
mod4 + c
    st -c Fzf -e sh -c "xdotool search "Fzf" windowsize 100% 50%; dm open $CLOUD_HOME"
# Notes TODO: move to dm
mod4 + m
    cd $CLOUD_HOME/Documents && xdg-open "$(ag --silent -l -g "Note.md$" Notes CS | dmenu -l 5)" &
# Reload sxhkd
mod4 + r
    pkill -USR1 -x sxhkd
# Menu
mod4 + bracketleft
    st -c Fzf -e sh -c "xdotool search "Fzf" windowsize 100% 50%; dm mn"
# Close window
mod4 + shift + c
    xdotool selectwindow windowkill
# Quit wm
mod4 + shift + q
    pkill -USR1 -x wm
