# Terminal
mod4 + Return
    st
# Terminal Dropdown
mod4 + i
    xdotool search --maxdept 1 --onlyvisible "terminaldropdown" windowunmap || xdotool search --maxdept 1 "terminaldropdown" windowmap || st -c terminaldropdown -e tmux a &
# Dictionary
mod4 + d
    xdotool search --maxdept 1 --onlyvisible "ldoce5viewer" windowunmap || xdotool search --maxdept 1 "ldoce5viewer" windowmap || ldoce5viewer &
# File Manager
mod4 + f
    dm fm
# Switch window
mod4 + w
    dm sw
# Increase Backlight
mod4 + Up
    xbacklight -inc 20
# Decrease Backlight
mod4 + Down
    xbacklight -dec 20
# Increase volume
mod4 + Right
    amixer -c 0 set Master 1+
# Decrease volume
mod4 + Left
    amixer -c 0 set Master 1-
# Run executable
mod4 + p
    dm rn
# Kill process
mod4 + u
    dm ps
# Lock screen
mod4 + bracketright
    slock
# Reboot
mod4 + r
    systemctl reboot
# Power off
mod4 + s
    systemctl poweroff
# Browser
mod4 + b
    xdotool search --maxdept 1 --onlyvisible --name "\- Chromium" windowunmap || xdotool search --maxdept 1 "\- Chromium" windowmap || chromium &
# Screen print
Print
    scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
# Screen print (window)
mod4 + Print
    scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'
# Run applications (desktop files)
mod4 + space
    dm rn
# Toogle Mpd
mod4 + n
    mpc -h ~/.mpd/socket toggle
# Mpc client
mod4 + e
    clerk
# Edit systemd files
mod4 + z
    dm open /etc/systemd/ /usr/lib/systemd ~/.config/systemd
# Google launcher
mod4 + g
    chromium --show-app-list
# Edit clouds file
mod4 + c
    dm open $CLOUD_HOME
# Notes TODO: move to dm
mod4 + m
    cd $CLOUD_HOME/Documents && xdg-open "$(ag --silent -l -g "Note.md$" Notes CS | dmenu -l 5)" &
# Reload sxhkd
mod4 + shift + r
    pkill -USR1 -x sxhkd
# Menu
mod4 + bracketleft
    dm mn
