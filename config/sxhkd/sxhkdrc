# Urxvt
mod4 + Return
    urxvtc
# Urxvt Dropdown
mod4 + i
    mapunmap --instance "urxvtdd" "urxvtc -name urxvtdd -title 'Urxvt Dropdown' -e $SHELL -c 'tmux has-session && tmux attach || tmux new-session'"
# Dictionary
mod4 + d
    mapunmap --instance "ldoce5viewer" ldoce5viewer
# File Manager
mod4 + f
    mapunmap --instance "dfm" "dmenu fm"
# Switch window
mod4 + w
    mapunmap --instance "dsw" "dmenu sw"
# Increase Backlight
mod4 + Up
    xbacklight -inc 20
# Decrease Backlight
mod4 + Down
    xbacklight -dec 20
# Increase volume
mod4 + Right
    amixer -c 0 set Master 1+
# Decrease volume
mod4 + Left
    amixer -c 0 set Master 1-
# Run executable
mod4 + p
    mapunmap --instance "dru" "dmenu ru"
# Kill process
mod4 + u
    mapunmap --instance "dkl" "dmenu kl"
# Lock screen
mod4 + bracketright
    xlock -mod blank
# Reboot
mod4 + r
    systemctl reboot
# Power off
mod4 + s
    systemctl poweroff
# Browser
mod4 + b
    mapunmap --instance Chromium chromium
# Screen print
Print
    scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
# Screen print (window)
mod4 + Print
    scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'
# Run applications (desktop files)
mod4 + space
    mapunmap --instance "dru" "dmenu ru"
# Toogle Mpd
mod4 + n
    mpc -h ~/.mpd/socket toggle
# Mpc client
mod4 + 8
    clerk
# Edit systemd files
mod4 + z
    mapunmap --instance "dfm" "dmenu open /etc/systemd/ /usr/lib/systemd ~/.config/systemd"
# Edit dot files
mod4 + g
    mapunmap --instance "dfm" "dmenu open /opt/github/jkoz/home"
# Reload sxhkd
mod4 + Shift + c
    pkill -USR1 -x sxhkd
# Menu
mod4 + bracketleft
    mapunmap --instance "dmn" "dmenu mn"
