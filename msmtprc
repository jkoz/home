# Set default values for all following accounts.
defaults
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
auth           login
account        gmail-phuoctaitp
host           smtp.gmail.com
port           587
from           phuoctaitp@gmail.com
user           phuoctaitp
passwordeval   pass mail/phuoctaitp@gmail.com

# Yahoo
auth           on
account        yahoo-thunderchief3000
host           smtp.mail.yahoo.com
port           587
from           thunderchief3000@yahoo.com
user           thunderchief3000
passwordeval   pass mail/thunderchief3000@yahoo.com

# Set a default account
account default : gmail-phuoctaitp
